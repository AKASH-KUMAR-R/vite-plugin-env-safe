{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"types": ["vite", "node"],
		"moduleResolution": "bundler",

		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,

		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true
	}
}
